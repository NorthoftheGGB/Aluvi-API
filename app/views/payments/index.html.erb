<h1>Listing payments</h1>

<table>
  <tr>
    <th>Driver</th>
    <th>Fare</th>
    <th>Rider</th>
    <th>Ride</th>
    <th>Amount cents</th>
    <th>Stripe charge status</th>
    <th>Initiation</th>
    <th>Captured at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.driver_id %></td>
    <td><%= payment.fare_id %></td>
    <td><%= payment.rider_id %></td>
    <td><%= payment.ride_id %></td>
    <td><%= payment.amount_cents %></td>
    <td><%= payment.stripe_charge_status %></td>
    <td><%= payment.initiation %></td>
    <td><%= payment.captured_at %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

