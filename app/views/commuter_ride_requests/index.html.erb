<h1>Listing ride_requests</h1>

<table>
  <tr>
		<th></th>
    <th>User</th>
    <th>State</th>
    <th>Type</th>
    <th>Origin</th>
    <th>Origin place name</th>
    <th>Destination</th>
    <th>Destination place name</th>
    <th>Request Created</th>
    <th></th>
    <th></th>
  </tr>

<% @ride_requests.each do |ride_request| %>
  <tr>
		<td><%= check_box_tag("selected[]", ride_request.id) %></td>
    <td><%= ride_request.user.full_name %></td>
    <td><%= ride_request.state %></td>
    <td><%= ride_request.request_type %></td>
    <td><%= ride_request.origin %></td>
    <td><%= ride_request.origin_place_name %></td>
    <td><%= ride_request.destination %></td>
    <td><%= ride_request.destination_place_name %></td>
    <td><%= ride_request.requested_datetime %></td>
    <td><%= link_to 'Show', ride_request %></td>
    <td><%= link_to 'Edit', edit_ride_request_path(ride_request) %></td>
    <td><%= link_to 'Destroy', ride_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

