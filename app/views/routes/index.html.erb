<h1>Listing routes</h1>

<table>
  <thead>
    <tr>
      <th>Rider</th>
      <th>Origin</th>
      <th>Pickup time</th>
      <th>Destination</th>
      <th>Return time</th>
      <th>Driving</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.rider_id %></td>
        <td><%= route.origin %></td>
        <td><%= route.pickup_time %></td>
        <td><%= route.destination %></td>
        <td><%= route.return_time %></td>
        <td><%= route.driving %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_route_path %>
