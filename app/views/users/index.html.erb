<h1>Listing users</h1>

<table>
  <tr>
    <th>Company</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Driver State</th>
    <th>Rider State</th>
    <th>Commuter balance cents</th>
    <th>Commuter refill amount cents</th>
    <th>Demo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.company_id %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.commuter_balance_cents %></td>
    <td><%= user.commuter_refill_amount_cents %></td>
		<td><%= user.demo %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>


<br/>
<br/>
<h2>Batch Upload</h2>
<%= form_tag 'users/csv_import', :multipart => true do %>
	<%= file_field_tag :file, :accept => "text/csv" %>
	<%= submit_tag "Upload CSV" %>
<% end %>
