<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company_id %><br />
    <%= f.number_field :company_id %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label "Rider State" %><br />
		<% unless @user.rider_role.nil? %>
    <%= f.label @user.rider_role.state %><br />
		<%= f.select :rider_state, @user.rider_role.aasm.events, :include_blank => true %>
		<% else %>
		Not Configured
		<%= f.select :rider_state, [ :initalize ], :include_blank => true %>
		<% end %>
  </div>
  <div class="field">
    <%= f.label "Driver State" %><br />
		<% unless @user.driver_role.nil? %>
    <%= f.label @user.driver_role.state %><br />
		<%= f.select :driver_state, @user.driver_role.aasm.events, :include_blank => true %>
		<% else %>
			Not Configured
			<%= f.select :driver_state, [ :initalize ], :include_blank => true %>
		<% end %>
  </div>
  <div class="field">
    <%= f.label :commuter_balance_cents %><br />
    <%= f.number_field :commuter_balance_cents %>
  </div>
  <div class="field">
    <%= f.label :commuter_refill_amount_cents %><br />
    <%= f.number_field :commuter_refill_amount_cents %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
